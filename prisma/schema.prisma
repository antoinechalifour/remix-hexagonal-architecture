generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id         String   @id @db.Uuid
  createdAt  DateTime
  title      String
  isComplete Boolean
  TodoList   TodoList @relation(fields: [todoListId], references: [id])
  todoListId String   @db.Uuid
  ownerId    String   @db.Uuid
}

model TodoList {
  id         String   @id @db.Uuid
  createdAt  DateTime
  title      String
  todos      Todo[]
  ownerId    String   @db.Uuid
  todosOrder Json
}

model Account {
  id    String @id @db.Uuid
  email String @unique
  hash  String
}
